[Unit]
Description=Flask App Service
After=network.target

[Service]
Type=simple
User=ec2-user
Group=ec2-user
WorkingDirectory=/home/ec2-user/app
EnvironmentFile=/home/ec2-user/app/.env
ExecStart=/home/ec2-user/app/venv/bin/python3 -m flask run --host=0.0.0.0 --port=5000
Restart=on-failure

[Install]
WantedBy=multi-user.target
